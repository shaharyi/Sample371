package matkonet2Exercise;

public class ReportCard {
	private String stuName; 
    private Subject[] subArray; 
    
    
    public ReportCard(String name, int num)
    {
    	setStuName(name);
    	Subject [] setSubArray = new Subject [num];
    	setSubArray(setSubArray );
    }
    
    public double average() 
    {
    	int count=0;
    	int sum=0;
    	for(int i=0;i<subArray.length;i++)
    	{
    		count++;
    		sum+=subArray[i].getGrade();
    	}
    	return sum/count;
    }

    
    public Boolean isExcellent() 
    {
    if(average()>84)
    {
    	return true;
    }
    else
    {
    	return false;
    }
    }

    
	public String getStuName() {
		return stuName;
	}

	public void setStuName(String stuName) {
		this.stuName = stuName;
	}

	public Subject[] getSubArray() {
		return subArray;
	}

	public void setSubArray(Subject[] subArray) {
		this.subArray = subArray;
	}
}
